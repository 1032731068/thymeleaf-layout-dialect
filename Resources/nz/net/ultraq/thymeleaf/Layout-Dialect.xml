<dialect xmlns="http://www.thymeleaf.org/extras/dialect"
	prefix="layout" namespace-uri="http://www.ultraq.net.nz/thymeleaf/layout"
	class="nz.net.ultraq.thymeleaf.LayoutDialect">

	<attribute-processor name="decorator" class="nz.net.ultraq.thymeleaf.DecoratorProcessor"/>

	<attribute-processor name="include" class="nz.net.ultraq.thymeleaf.IncludeProcessor"/>

	<attribute-processor name="fragment" class="nz.net.ultraq.thymeleaf.FragmentProcessor">
		<restrictions tags="-title"/>
	</attribute-processor>

	<attribute-processor name="title-pattern" class="nz.net.ultraq.thymeleaf.TitlePatternProcessor">
		<restrictions tags="title"/>
	</attribute-processor>

</dialect>
